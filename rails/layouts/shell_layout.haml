!!!
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    = favicon_link_tag 'favicon.png'
    %title
      = yield :title
    = yield :stylesheets
    = yield :head

  - if content_for?(:body_tag)
    = yield :body_tag
  - else
    %body
  #wrapper
    %header#header
      = render :partial => "layouts/converge-ui/header_layout"
    %article#maincontent
      %section.maincontent
        = yield :content
  %footer
    = yield :footer

  = yield :javascript
  = yield :extra
