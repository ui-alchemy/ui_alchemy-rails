!!!
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    = favicon_link_tag 'favicon.png'
    %title
      = yield :title
    = yield :stylesheets
    = yield :head

  - if controller.respond_to?(:section_id)
    - section_id = controller.section_id
  - elsif @body_id
    - section_id = @body_id
  - else
    - section_id = "generic"
  %body{:id => section_id}
    = yield :body
    = yield :javascript
    = yield :extra
